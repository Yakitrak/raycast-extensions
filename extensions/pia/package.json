{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pia",
  "title": "Private Internet Access",
  "description": "Private Internet Access VPN Controller",
  "icon": "icon.png",
  "author": "yakitrak",
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "connect",
      "title": "Connect",
      "subtitle": "Connect to PIA default server",
      "description": "Connects to PIA default server",
      "mode": "no-view"
    },
    {
      "name": "disconnect",
      "title": "Disconnect",
      "subtitle": "Disconnect from PIA",
      "description": "Disconnects from PIA",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.62.1",
    "child_process": "^1.0.2",
    "run-applescript": "^6.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
